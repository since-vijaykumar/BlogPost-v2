<%- include("partials/header"); -%>

<h1 class="mt-5"> <%= compose %></h1>
<form action="/compose" method="post" class="mt-5">
  <div class="form-group">
    <label for="title" class="h5">Title</label>
    <input type="text" class="form-control" id="title" name="postTitle">
  </div>
  <div class="form-group">
    <label for="post" class="h5">Post</label>
    <textarea class="form-control" id="post" name="postBody" rows="4"></textarea>
  </div>
  <div class="form-group">
      <button type="submit" class="btn btn-primary" name="publish">Publish</button>
  </div>

</form>

<%- include("partials/footer"); -%>
